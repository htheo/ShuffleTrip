<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.shuffle.theo.shuffletrip">

    <!-- Internet Permission -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme"

        >
        <activity
            android:name="com.shuffle.theo.shuffletrip.MainActivity"
            android:label="@string/app_name"

            >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity
            android:name="com.shuffle.theo.shuffletrip.SingleArticle"
            android:label="Single Article" >

        </activity>
        <activity
            android:name="com.shuffle.theo.shuffletrip.SearchActivity"
            android:label="Rechercher" >

        </activity>
        <activity
            android:name="com.shuffle.theo.shuffletrip.UserActivity"
            android:label="User" >

        </activity>

    </application>

</manifest>
