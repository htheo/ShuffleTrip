<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.shuffle.theo.shuffletrip.SingleArticle"
    tools:showIn="@layout/activity_single_article"
    android:background="@mipmap/paysage_blur"
    android:gravity="top">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:weightSum="1"
        android:layout_alignParentBottom="false"
        android:layout_alignParentRight="false"
        android:layout_alignParentEnd="false"

        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:text="Le titre d&apos;un magnifique article."
            android:textStyle="normal"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:textSize="20dp"
            android:layout_marginBottom="10dp" />

        <ImageView
            android:id="@+id/img_single_article"
            android:clickable="true"
            android:layout_width="fill_parent"
            android:layout_height="315dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center|left"
            android:src="@drawable/chateau"
            android:layout_marginBottom="10dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/likes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:textStyle="normal"
                android:textColor="#FFFFFF"
                android:textSize="15dp"
                android:gravity="left" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" likes"
                android:textStyle="normal"
                android:textColor="#FFFFFF"
                android:textSize="15dp"
                android:gravity="left" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <Button
                android:layout_width="54dp"
                android:layout_height="21dp"
                android:text="UP!"
                android:id="@+id/like_up"
                android:layout_marginTop="0dp"
                android:textSize="10dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="0dp"
                android:layout_marginStart="0dp"
                android:layout_gravity="right"
                android:gravity="center|left"
                android:background="#00ffffff" />

            <Button
                android:layout_width="54dp"
                android:layout_height="20dp"
                android:text="Down"
                android:id="@+id/like_down"
                android:layout_marginTop="0dp"
                android:textSize="10dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="0dp"
                android:layout_marginStart="0dp"
                android:layout_gravity="right"
                android:gravity="center|left"
                android:background="#00ffffff" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="20dp"
                android:text="Next !"
                android:id="@+id/button_next"
                android:layout_marginTop="0dp"
                android:background="#00ffffff"
                android:textSize="10dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="0dp"
                android:layout_marginStart="0dp"
                android:layout_gravity="right"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#88ffffff">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:textStyle="normal"
                android:textColor="#FFFFFF"
                android:textSize="15dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="0.5"
                android:gravity="left"
                android:phoneNumber="true"
                android:background="#79ffffff"
                android:layout_gravity="bottom" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/title_ville"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ville Inconnue"
                android:textStyle="normal"
                android:textColor="#FFFFFF"
                android:textSize="15dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="0.5"
                android:gravity="left"
                android:layout_marginTop="5dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/title_article"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vous n&apos;avez pas de connection internet. La ville ne peut pas s&apos;afficher. Cependant, c&apos;est un aperÃ§u d&apos;un article. "
            android:textStyle="normal"
            android:textColor="#FFFFFF"
            android:textAlignment="inherit" />


    </LinearLayout>

</RelativeLayout>

